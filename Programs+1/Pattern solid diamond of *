#   *
#  ***
# *****
#  ***
#   *
x=2
y=1
m=1
n=3
for i in range(0,5):
    if(i<3):
        for j in range(1,x+1):
            print(end=" ")
        x=x-1
        for k in range(1,y+1):
            print("*",end="")
        y=y+2
        print()
    else:
        for j in range(1,m+1):
            print(end=" ")
        m=m+1
        for k in range(1,n+1):
            print("*",end="")
        n=n-2
        print()
