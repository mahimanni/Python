import math
def area(r):
    return((math.pi)*r*r)
def perimeter(r):
    return(2*(math.pi)*r)
choice=int(input("Enter 1 for calculating area of circle\nEnter 2 for calculating perimeter of circle\nEnter your choice:"))
match choice:
    case 1:
        radius=int(input("Enter radius"))
        print("Area of circle=",area(radius))
    case 2:
        radius=int(input("Enter radius"))
        print("Perimeter of circle=",perimeter(radius))
    case _:
        print("Invalid choice")
